<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="48dip"
  android:orientation="horizontal"
  android:background="@color/hellblau"
>
    
	<LinearLayout
    	android:layout_width="0dip"
    	android:layout_height="48dip"
    	android:layout_weight="5"
    	android:orientation="vertical"
    >

	    <View 
        	android:layout_width="fill_parent"
  			android:layout_height="4dip"
  			android:background="@android:color/white"
    	/>
		    
	    <TextView android:id="@+id/rowTickerTorSpieler"
      		android:layout_width="fill_parent"
      		android:layout_height="32dip"
  			android:paddingLeft="20dp"
  			android:paddingTop="10dp"
  			android:gravity="left|bottom"
      		android:textColor="@color/standardfarbe"
      		android:textSize="15dip"
      		android:textStyle="bold"
    	/>
	    
	    <TextView android:id="@+id/rowTickerTorTeam"
      		android:layout_width="fill_parent"
      		android:layout_height="22dip"
  			android:paddingLeft="20dp"
      		android:gravity="left|top"
      		android:textColor="@color/standardfarbe"
      		android:textSize="8dip"
    	/>

	</LinearLayout>
	
	<LinearLayout
    	android:layout_width="0dip"
    	android:layout_height="48dip"
    	android:layout_weight="1"
    	android:orientation="vertical"
    	>
    	
	    <View 
        	android:layout_width="fill_parent"
  			android:layout_height="4dip"
  			android:background="@android:color/white"
    	/>
	    	
    	<TextView android:id="@+id/rowTickerTorTore"
      		android:layout_width="fill_parent"
      		android:layout_height="42dip"
      		android:gravity="center_vertical|center_horizontal"
      		android:textColor="@color/standardfarbe"
      		android:textStyle="bold"
      		android:textSize="15dip"
    	/>

	</LinearLayout>

	<LinearLayout
    	android:layout_width="0dip"
    	android:layout_height="48dip"
    	android:layout_weight="1"
    	android:orientation="vertical"
    	>

	    <View 
        	android:layout_width="fill_parent"
  			android:layout_height="4dip"
  			android:background="@android:color/white"
    	/>
	    	   	
    	<TextView android:id="@+id/rowTickerTorChancen"
      		android:layout_width="fill_parent"
      		android:layout_height="42dip"
      		android:gravity="center_vertical|center_horizontal"
      		android:textColor="@color/standardfarbe"
      		android:textStyle="bold"
      		android:textSize="15dip"
    	/>
    	
	</LinearLayout>

	<LinearLayout
    	android:layout_width="0dip"
    	android:layout_height="48dip"
    	android:layout_weight="2"
    	android:orientation="vertical"
    	>
    	
    	<View 
        	android:layout_width="fill_parent"
  			android:layout_height="4dip"
  			android:background="@android:color/white"
    	/>
	
		<TextView android:id="@+id/rowTickerTorProzent"
      		android:layout_width="fill_parent"
      		android:layout_height="42dip"
      		android:paddingRight="20dp"
      		android:gravity="center_vertical|center_horizontal"
      		android:textColor="@color/standardfarbe"
      		android:textStyle="bold"
      		android:textSize="15dip"
    	/>
    
	</LinearLayout>

</LinearLayout>
