<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="55dip"
  android:orientation="horizontal"
  android:background="@drawable/tablecell55none"
  >
  
	<TextView android:id="@+id/rowTickerIcon"
    	android:layout_width="55dip"
    	android:layout_height="fill_parent"
    	android:layout_marginRight="4dip"
    	android:layout_marginLeft="20dip"
    	android:gravity="center"
		android:textStyle="bold"
		android:textSize="17dip"
		android:textColor="@android:color/white"
  	/>
	
	<LinearLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	>
    	 
    	<RelativeLayout
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal"
    		>
    	
    		<TextView android:id="@+id/rowTickerAktion"
      			android:layout_width="fill_parent"
      			android:layout_height="27dip"
      			android:gravity="center_vertical"
		    	android:textStyle="bold"
      			android:textColor="@color/standardfarbe"
      			android:maxLines="1"
      			android:ellipsize="end"
      			android:layout_marginLeft="20dip"
      			android:textSize="15dip"
    		/>
    		
    		<TextView android:id="@+id/rowTickerZeit"
      			android:layout_width="100dip"
      			android:layout_height="27dip"
      			android:gravity="right"
      			android:layout_alignParentRight="true"
		    	android:textStyle="bold"
      			android:textColor="@color/standardfarbe"
      			android:maxLines="1"
      			android:ellipsize="end"
      			android:layout_marginRight="20dip"
      			android:textSize="15dip"
    		/>
	
    	</RelativeLayout>
    	
	    <TextView android:id="@+id/rowTickerSpieler"
      		android:layout_width="fill_parent"
      		android:layout_height="28dip"
      		android:gravity="center_vertical"
		    android:textStyle="bold"
      		android:textColor="@color/standardfarbe"
      		android:maxLines="1"
      		android:ellipsize="end"
      		android:layout_marginLeft="20dip"
      		android:textSize="15dip"
    	/>
	
	
	</LinearLayout>
	
</LinearLayout>