<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:paddingLeft="25dp"
  android:paddingRight="25dp"
  android:orientation="vertical"
  android:background="@drawable/hintergrund">
  
	<TextView 
	    android:text="@string/mannschaftName" 
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="left|bottom"
        android:textColor="@color/standardfarbe"
        android:textStyle="bold"
        android:textSize="17dip" 
	/>
        
	<EditText
	    android:id="@+id/mannschaftName"
	    android:inputType="text"
	    android:layout_width="fill_parent"
        android:layout_height="40dp"
	/>

	<TextView 
	    android:text="@string/mannschaftKuerzel" 
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="left|bottom"
        android:textColor="@color/standardfarbe"
        android:textStyle="bold"
        android:textSize="17dip" 
	/>

	<EditText 
	    android:id="@+id/mannschaftKuerzel"
	    android:inputType="text"
		android:layout_width="136dp"
        android:layout_height="40dp"
	/>

    <Button 
        android:id="@+id/spieler"
        android:background="@drawable/grossblau"
        android:layout_width="fill_parent"
        android:layout_height="37dp"
        android:text="@string/mannschaftSpielerVerwalten"
        android:textColor="@android:color/white"
        android:textSize="15dip" 
        android:layout_marginTop="20dp"
    />
    
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="37dp" 
        android:layout_marginTop="20dp"
        android:stretchColumns="0"
    > 
        
        <TableRow
        	android:layout_width="fill_parent"
        	android:layout_height="37dp" 
        >
        	
        	<Button 
        		android:id="@+id/spielerimport"
        		android:background="@drawable/grossblau"
        		android:layout_width="0dip"
        		android:layout_height="37dp"
        		android:text="@string/mannschaftSpielerImport"
        		android:textColor="@android:color/white"
        		android:textSize="15dip" 
    		/>
        	
    		<Button 
    		    android:id="@+id/spielerimportinfo"
      			android:layout_width="37dip"
      			android:layout_height="37dip"
      			android:background="@drawable/inforund"
      			android:textSize="15dip"
      			android:layout_marginLeft="10dp"
    		/>
        
    	</TableRow>
        
    </TableLayout>
   
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:gravity="bottom"
    > 
        
        <TableRow
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content" 
        	android:layout_marginBottom="50dp"
        >
        	
        	<Button 
        		android:id="@+id/save"
        		android:background="@drawable/kleingruen"
        		android:layout_width="fill_parent"
        		android:layout_height="37dp"
        		android:text="@string/speichern"
        		android:textColor="@android:color/white"
        		android:textSize="15dip" 
        		android:layout_weight="1"
        		android:layout_marginRight="10dp"
    		/>
        	
        	<Button 
        		android:id="@+id/delete"
        		android:background="@drawable/kleinrot"
        		android:layout_width="fill_parent"
        		android:layout_height="37dp"
        		android:text="@string/loeschen"
        		android:textColor="@android:color/white"
        		android:textSize="15dip" 
        		android:layout_weight="1"
        		android:layout_marginLeft="10dp"
    		/>
        
        </TableRow>
        
    </TableLayout>

</LinearLayout>