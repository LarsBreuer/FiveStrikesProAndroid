<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/hintergrund">

<LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:paddingLeft="5dp"
  android:paddingRight="5dp"
  android:orientation="vertical"
  >
      
	<TextView 
	    android:text="@string/tickerAktionWurfecke" 
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="left|bottom"
        android:textColor="@color/standardfarbe"
        android:textStyle="bold"
        android:textSize="17dip" 
	/>
        
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
    > 
        
        <TableRow
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content" 
        	android:gravity="center_horizontal"
        >
        	
        	<Button 
        		android:id="@+id/tor_ol"
        		android:background="@drawable/tor_ol"
        		android:layout_width="73dp"
        		android:layout_height="50dp" 
        		android:layout_marginRight="3dp"
        		android:textColor="@color/standardfarbe"
        		android:gravity="center_horizontal|center_vertical"
    		/>
        	
        	<Button 
        		android:id="@+id/tor_om"
        		android:background="@drawable/tor_om"
        		android:layout_width="73dp"
        		android:layout_height="50dp" 
				android:textColor="@color/standardfarbe"
        		android:gravity="center_horizontal|center_vertical"
    		/>
        	
        	<Button 
        		android:id="@+id/tor_or"
        		android:background="@drawable/tor_or"
        		android:layout_width="73dp"
        		android:layout_height="50dp" 
        		android:layout_marginLeft="3dp"
        		android:textColor="@color/standardfarbe"
        		android:gravity="center_horizontal|center_vertical"
    		/>
        
    	</TableRow>

        <TableRow
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content" 
        	android:gravity="center_horizontal"
        >
        	
        	<Button 
        		android:id="@+id/tor_ml"
        		android:background="@drawable/tor_ml"
        		android:layout_width="73dp"
        		android:layout_height="50dp" 
        		android:layout_marginRight="3dp"
        		android:layout_marginTop="3dp"
        		android:textColor="@color/standardfarbe"
        		android:gravity="center_horizontal|center_vertical"
    		/>
        	
        	<Button 
        		android:id="@+id/tor_mm"
        		android:background="@drawable/tor_mm"
        		android:layout_width="73dp"
        		android:layout_height="50dp" 
        		android:layout_marginTop="3dp"
        		android:textColor="@color/standardfarbe"
        		android:gravity="center_horizontal|center_vertical"
    		/>
        	
        	<Button 
        		android:id="@+id/tor_mr"
        		android:background="@drawable/tor_mr"
        		android:layout_width="73dp"
        		android:layout_height="50dp" 
        		android:layout_marginLeft="3dp"
        		android:layout_marginTop="3dp"
        		android:textColor="@color/standardfarbe"
        		android:gravity="center_horizontal|center_vertical"
    		/>
        
    	</TableRow>
    	
        <TableRow
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content" 
        	android:gravity="center_horizontal"
        >
        	
        	<Button 
        		android:id="@+id/tor_ul"
        		android:background="@drawable/tor_ul"
        		android:layout_width="73dp"
        		android:layout_height="50dp" 
        		android:layout_marginRight="3dp"
        		android:layout_marginTop="3dp"
        		android:textColor="@color/standardfarbe"
        		android:gravity="center_horizontal|center_vertical"
    		/>
        	
        	<Button 
        		android:id="@+id/tor_um"
        		android:background="@drawable/tor_um"
        		android:layout_width="73dp"
        		android:layout_height="50dp" 
        		android:layout_marginTop="3dp"
        		android:textColor="@color/standardfarbe"
        		android:gravity="center_horizontal|center_vertical"
    		/>
        	
        	<Button 
        		android:id="@+id/tor_ur"
        		android:background="@drawable/tor_ur"
        		android:layout_width="73dp"
        		android:layout_height="50dp" 
        		android:layout_marginLeft="3dp"
        		android:layout_marginTop="3dp"
        		android:textColor="@color/standardfarbe"
        		android:gravity="center_horizontal|center_vertical"
    		/>
        
    	</TableRow>
    	
    </TableLayout>

</LinearLayout>
</ScrollView>